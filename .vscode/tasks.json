{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // idk what that is but here's the plaintext URL
    // https://code.visualstudio.com/docs/editor/tasks#vscode
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "label": "conda",
            "type": "shell",
            "isBackground": true,
            "windows": {
                "command": "conda activate flask"
            }
        },
        {
            "label": "doesn't work sphinx",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "windows": {
                "args": [
                    "-m",
                    "sphinx-build",
                    "-b",
                    "html",
                    "-o",
                    "docs\\build\\html",
                    "docs\\source"
                ]
            },
            "options": {
                "shell": {
                    "executable": "pwsh"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "autopep8 current file",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "autopep8",
                "-i",
                "${file}"
            ]
        },
        {
            "label": "YAPF current file",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "yapf",
                "-i",
                "${file}"
            ]
        },
        {
            "label": "sphinx-build",
            "type": "shell",
            "command": "sphinx-build",
            "windows": {
                "args": [
                    "sphinx-build",
                    "-n",
                    "-b",
                    "html",
                    "-o",
                    "docs\\build\\html",
                    "docs\\source",
                    "-d",
                    "docs\\build\\doctrees"
                ]
            },
            "options": {
                "shell": {
                    "executable": "pwsh",
                    "args": ["-NoProfile", "-NoLogo", "-NoExit"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "npm",
            "type": "npm",
            "script": "install",
            "path": "jupyter_conf/"
        }
    ]
}